@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rezervasyonlar</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İsim Soyisim</th>
                                    <th>Mail</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Çıkış Tarihi</th>
                                    <th>Yetişkin sayısı</th>
                                    <th>Çocuk sayısı</th>
                                    <th>Yetişkin sayısı</th>
                                    <th>Özel istek</th>
                                    <th>Bilgi</th>
                                    <th>Statü</th>
                                    <th>İşlemler</th>
                                 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BookingId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                                        <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                                        <td>@item.AdultCount</td>
                                        <td>@item.ChildCount</td>
                                        <td>@item.RoomCount</td>
                                        <td>@item.SpecialRequest</td>
                                        <td>@item.Description</td>

                                        @if (item.Status == "Onay Bekliyor")
                                        {
                                            <td>
                                                <span class="badge badge-primary px-2">@item.Status</span>
                                            </td>
                                            <td><a href="/BookingAdmin/AprovedReservation/@item.BookingId" class="btn btn-primary">Onayla</a></td>
                                            <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-danger">Reddet</a></td>
                                            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
                                        }
                                        @if (item.Status == "Onaylandı")
                                        {

                                            <td>
                                                <span class="badge badge-success px-2">@item.Status</span>
                                            </td>
                                            <td><a href="/BookingAdmin/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-success">Güncelle</a></td>
                                            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
                                        }
                                        @if (item.Status == "Red Edildi")
                                        {
                                            <td>
                                                <span class="badge badge-danger px-2">@item.Status</span>
                                            </td>
                                            <td><a href="/BookingAdmin/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-success">Güncelle</a></td>
                                            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
                                        }
                                        
                                    
                                       
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>İsim Soyisim</th>
                                    <th>Mail</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Çıkış Tarihi</th>
                                    <th>Yetişkin sayısı</th>
                                    <th>Çocuk sayısı</th>
                                    <th>Yetişkin sayısı</th>
                                    <th>Özel istek</th>
                                    <th>Bilgi</th>
                                    <th>Statü</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>