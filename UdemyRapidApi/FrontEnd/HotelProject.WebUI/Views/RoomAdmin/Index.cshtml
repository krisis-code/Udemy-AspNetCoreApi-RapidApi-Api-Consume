@model List<RoomResultDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Oda Numarası</th>
                                    <th>Başlık</th>
                                    <th>Bilgi</th>
                                    <th>Yatak Sayısı</th>
                                    <th>Banyo Sayısı</th>
                                    <th>Wifi</th>
                                    <th>Fiyat</th>
                                    <th>İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RoomId</td>
                                        <td>@item.RoomNumber</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.BedCount</td>

                                        <td>@item.BathCount</td>
                                        <td>@item.Wifi</td>
                                        <td>@item.Price</td>

                                       
                                        <td><a href="/RoomAdmin/UpdateRoom/@item.RoomId" class="btn btn-primary">Güncelle</a></td>
                                        <td><a href="/RoomAdmin/DeleteRoom/@item.RoomId" class="btn btn-primary">Sil</a></td>



                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Oda Numarası</th>
                                    <th>Başlık</th>
                                    <th>Bilgi</th>
                                    <th>Yatak Sayısı</th>
                                    <th>Banyo Sayısı</th>
                                    <th>Wifi</th>
                                    <th>Fiyat</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                       <a href="/RoomAdmin/AddRoom/" class="btn btn-primary">Yeni Oda Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>