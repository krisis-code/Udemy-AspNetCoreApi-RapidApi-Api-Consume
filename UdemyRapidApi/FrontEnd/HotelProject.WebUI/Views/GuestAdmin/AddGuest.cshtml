@model GuestAddDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" asp-action="AddGuest" asp-controller="GuestAdmin" method="post">

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                       Müşteri İsmi  <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" asp-for="Name" class="form-control" placeholder=" Müşteri İsmi giriniz..">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label">
                                        Müşteri Soyadı  <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" asp-for="SureName" class="form-control" placeholder="  Müşteri Soyadı  giriniz..">
                                        <span asp-validation-for="SureName"></span>
                                    </div>
                                </div>
                 

                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>


