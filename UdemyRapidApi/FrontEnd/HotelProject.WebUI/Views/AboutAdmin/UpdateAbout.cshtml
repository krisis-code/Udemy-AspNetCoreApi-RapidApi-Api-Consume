@model AboutUpdateDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                            <form class="form-valide" asp-action="UpdateAbout" asp-controller="AboutAdmin" method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Birinci Başlık <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="Title1" class="form-control" placeholder="Birinci Başlığı giriniz..">
                                    <span asp-validation-for="Title1"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    İkinci Başlık <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="Title2" class="form-control" placeholder="İkinci Başlığı giriniz..">
                                    <span asp-validation-for="Title2"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    İçerik <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="Content" class="form-control" placeholder="İçeriği giriniz..">
                                    <span asp-validation-for="Content"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Oda Sayısı <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="RoomCount" class="form-control" >
                                    <span asp-validation-for="RoomCount"></span>
                                </div>
                            </div>
                          
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Çalışan Sayısı <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="StaffCount" class="form-control" >
                                    <span asp-validation-for="StaffCount"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">
                                    Müşteri Sayısı <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="CustomerCount" class="form-control" >
                                    <span asp-validation-for="CustomerCount"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->
</div>

